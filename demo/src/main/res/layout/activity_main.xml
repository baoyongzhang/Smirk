<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_execute_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行Text扩展功能"/>

    <Button
        android:id="@+id/bt_execute_toast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="执行Toast扩展功能"/>

    <Button
        android:id="@+id/bt_load_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载扩展dex1"/>

    <Button
        android:id="@+id/bt_load_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载扩展dex2"/>

    <Button
        android:id="@+id/bt_load_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载所有扩展dex"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="调用日志"/>
    </ScrollView>

</LinearLayout>
